{
  "name": "agentx-workflow-enforcer",
  "displayName": "AgentX Workflow Enforcer",
  "description": "Enforces issue-first workflow by blocking file saves until a GitHub Issue is claimed",
  "version": "1.0.0",
  "publisher": "agentx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnPiyush/AgentX"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "workflow",
    "github",
    "issues",
    "agentx",
    "copilot"
  ],
  "activationEvents": [
    "workspaceContains:AGENTS.md",
    "workspaceContains:.github/copilot-instructions.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentx.createIssue",
        "title": "AgentX: Create GitHub Issue"
      },
      {
        "command": "agentx.claimIssue",
        "title": "AgentX: Claim GitHub Issue"
      },
      {
        "command": "agentx.checkStatus",
        "title": "AgentX: Check Workflow Status"
      },
      {
        "command": "agentx.toggleEnforcement",
        "title": "AgentX: Toggle Workflow Enforcement"
      }
    ],
    "configuration": {
      "title": "AgentX Workflow Enforcer",
      "properties": {
        "agentx.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable workflow enforcement"
        },
        "agentx.blockOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Block file saves when no issue is claimed"
        },
        "agentx.showWarningOnly": {
          "type": "boolean",
          "default": false,
          "description": "Show warning instead of blocking (soft mode)"
        },
        "agentx.excludePatterns": {
          "type": "array",
          "default": [
            "**/.git/**",
            "**/node_modules/**",
            "**/*.log",
            "**/*.lock"
          ],
          "description": "File patterns to exclude from enforcement"
        },
        "agentx.requiredLabels": {
          "type": "array",
          "default": ["status:in-progress"],
          "description": "Labels that indicate an issue is claimed"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2"
  }
}
