{
  "$schema": "https://json.schemastore.org/mcp.json",
  "servers": {
    "github": {
      // Remote GitHub MCP Server (hosted by GitHub) - recommended
      // Requires: VS Code 1.101+, GitHub Copilot subscription
      // OAuth authentication - no PAT needed!
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"

      // Alternative: Use PAT instead of OAuth
      // "type": "http",
      // "url": "https://api.githubcopilot.com/mcp/",
      // "headers": { "Authorization": "Bearer ${input:github_token}" }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_token",
      "description": "GitHub Personal Access Token (only needed if using PAT auth)",
      "password": true
    }
  ]
}
